<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import net.averkhoglyad.chess.manager.gui.component.ChessDiagram?>
<?import org.controlsfx.control.MasterDetailPane?>
<AnchorPane xmlns="http://javafx.com/javafx/8.0.80" xmlns:fx="http://javafx.com/fxml/1"
            fx:id="editor" fx:controller="net.averkhoglyad.chess.manager.gui.controller.GamesController">
    <children>
        <MasterDetailPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
                          dividerPosition="0.65" animated="true">
            <detailSide>RIGHT</detailSide>
            <masterNode>
                <TableView fx:id="gamesTable"
                           AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                           AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <placeholder>
                        <Label>No games</Label>
                    </placeholder>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="selectionColumn" resizable="false"
                                     minWidth="28" maxWidth="28" prefWidth="28">
                            <graphic>
                                <CheckBox fx:id="selectionColumnCheckBox"/>
                            </graphic>
                        </TableColumn>
                        <TableColumn fx:id="detailsColumn" resizable="false"
                                     minWidth="28" maxWidth="28" prefWidth="28"/>
                        <TableColumn fx:id="whitePlayerColumn" text="White" />
                        <TableColumn fx:id="blackPlayerColumn" text="Black" />
                        <TableColumn fx:id="turnsColumn" text="Turns" />
                        <TableColumn fx:id="statusColumn" text="Status" />
                        <TableColumn fx:id="finishedAtColumn" text="Finished" />
                    </columns>
                </TableView>
            </masterNode>
            <detailNode>
                <ScrollPane fitToWidth="true">
                    <content>
                        <VBox alignment="TOP_CENTER">
                            <ChessDiagram fx:id="fenDiagram" visible="false"></ChessDiagram>
                            <Label fx:id="moves" wrapText="true"></Label>
                        </VBox>
                    </content>
                </ScrollPane>
            </detailNode>
        </MasterDetailPane>
    </children>
</AnchorPane>